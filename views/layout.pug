doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    link(rel='apple-touch-icon', sizes='76x76', href='/assets/img/apple-icon.png')
    link(rel='icon', type='image/png', href='/assets/img/favicon.png')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title #{title} - Fibo - The tool for downloading and importing domain
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')
    meta(name='viewport', content='width=device-width')

    include partials/styles
    block styles
  body
    .wrapper#app
      include partials/sidebar
      .main-panel
        include partials/nav
        .content
          block content
        include partials/footer
      //- ring-loader#spinner(:loading="loading", color="#017EBA", size="15px")
      #spinner.hidden
        .v-spinner
          .v-ring.v-ring1(style='height: 60px; width: 60px; position: relative;')
            .v-ring.v-ring2(style='height: 60px; width: 60px; border: 6px solid rgb(156, 39, 176); opacity: 0.4; border-radius: 100%;')
            .v-ring.v-ring3(style='height: 60px; width: 60px; border: 6px solid rgb(156, 39, 176); opacity: 0.4; border-radius: 100%;')

  include partials/scripts
  script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.16.2/axios.min.js')
  block scripts
  if activePage != ''
    script(src='/assets/pages/' + activePage + '.js?v=1')
